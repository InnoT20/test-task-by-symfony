{% extends "base.html.twig" %}
{% block body %}
    <div class="col">
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Release date</th>
                <th>Rating</th>
                <th>Genre</th>
                <th>Author</th>
                <th>Created At</th>
            </tr>
            </thead>
            <tbody>
            {% for book in books %}
                <tr>
                    <td>#{{ book.id }}</td>
                    <td>{{ book.title }}</td>
                    <td>{{ book.releaseDate | date('d.m.Y') }}</td>
                    <td>{{ book.rating }}</td>
                    <td>{{ book.genre.title }}</td>
                    <td>{{ book.author.name }}</td>
                    <td>{{ book.createdAt | date('d.m.Y H:i') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}